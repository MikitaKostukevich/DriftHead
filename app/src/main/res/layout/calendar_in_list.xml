<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/windowBackgroundLight"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/calendarListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/calendarListImage"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:clickable="true"
        app:srcCompat="@drawable/andrey" />

    <TextView
        android:id="@+id/calendarListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center|center_horizontal|left|center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendarListPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center|left"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendarListDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center|left"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calendarListLink"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:autoLink="web"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="0dp"
        android:textStyle="bold"
        tools:visibility="invisible" />


</LinearLayout>